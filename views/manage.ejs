 <% include header %> 
<link rel='stylesheet' href='/stylesheets/bootstrap.min.css' />
<script src="/javascripts/jquery-1.11.3.min.js"></script>
<script src="/javascripts/bootstrap-3.3.5/js/bootstrap.min.js"></script>
<script src="/javascripts/layer-2.1/layer.js"></script>
<script>
    function page_delete(page_name,page_img)
    {
        href = "delete?name="+page_name+"&image="+page_img;
        layer.confirm('确认要删除书名为[ '+page_name+' ]的书籍？', {
             btn: ['确定','取消'], //按钮
             shade: 0,
        }, function(){
            layer.open({
                type : 2,
                title: "删除书籍",
                closeBtn: 1,
                shade: 0,
                //shadeClose: true,
                area: ['362px', '172px'],
                scrollbar: false,
                skin: 'layui-layer-rim', //加上边框
                content : href,
                time: 30,
                end: function (){
                    location.reload();
                }
            });
        });
    }
</script>
<body>
<div id="wrapper">
<div class="bd">
	<div class="carousel">
    <h2 class="page-header">书籍管理</h2>
	    <div class="table-responsive">
	      <table class="table table-striped table-condensed">
	        <thead>
	          <tr>
	            <th>书名</th>
	            <th>作者</th>
	            <th>价格</th>
	            <th>出版社</th>
	            <th>&nbsp;</th>
	          </tr>
	        </thead>
	        <tbody>
	        <% for(i=0; i< userlist.length; i++) {%>
	          <tr id="id_name">
	          	<td id="page_name"><%= userlist[i].name %></td>
	            <td id="page_author"><%= userlist[i].author %></td>
	            <td id="page_price"><%= userlist[i].price %></td>
	            <td id="page_publishing"><%= userlist[i].publishing %></td>
	            <td><button type="button" class="btn btn-default" onClick="page_delete('<%= userlist[i].name %>','<%= userlist[i].image %>')">删除</button></td>
	          </tr>
	        <% } %>
	        </tbody>
		</div>
	</div>
</div>
</div>
</body>
</html>

